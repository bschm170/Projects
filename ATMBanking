public class ATMBanking {
    private int count;
    private String name;
    private String pin;
    private int id;
    private double balance;

    public ATMBanking(String name, String pin) {
        this.name = name;
        this.pin = pin;
    }

    public void deposit(double amount) {
        double deposit = amount + balance;

        if(amount + balance >= 0) {
            System.out.println(deposit);
        } else {
            System.out.println("Cannot process.");
        }
    }

    public double getBalance() {
        return balance; 
    }

    public int getID() {
        return id;
    }

    public String getName() {
        return name;
    }

    public boolean isPin(String attempt) {
        if(attempt == pin){
            return true;
        } else {
            return false;
        }
    }

    public double withdraw(double amount) {
        double withdrawal = balance - amount;

        if(balance >= 0 && amount < balance) {
            return double withdrawal;
        } else {
            System.out.println("Cannot return");
        }
    }

    public String toString(){
        String variable = String.format("(%.1f,%.1f)", x, y);
        return variable; 
    }
}
